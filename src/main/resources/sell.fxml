<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.uniroma2.dicii.ispw.bachecaannunci.controller.SellController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>
    <children>
        <Label text="Nuovo Annuncio" textFill="#2c3e50">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <VBox maxWidth="400.0" spacing="5.0">
            <children>
                <Label text="Titolo (Max 20 caratteri)" />
                <TextField fx:id="titoloField" promptText="Es. iPhone 12" />
            </children>
        </VBox>

        <VBox maxWidth="400.0" spacing="5.0">
            <children>
                <Label text="Categoria" />
                <ComboBox fx:id="categoryComboBox" maxWidth="1.7976931348623157E308" promptText="Seleziona categoria..." />
            </children>
        </VBox>

        <VBox maxWidth="400.0" spacing="5.0">
            <children>
                <Label text="Prezzo (â‚¬)" />
                <TextField fx:id="prezzoField" promptText="0.00" />
            </children>
        </VBox>

        <VBox maxWidth="400.0" spacing="5.0">
            <children>
                <Label text="Descrizione (Max 100 caratteri)" />
                <TextArea fx:id="descrizioneArea" prefHeight="100.0" promptText="Descrizione breve..." wrapText="true" />
            </children>
        </VBox>

        <VBox maxWidth="400.0" spacing="10.0">
            <children>
                <Button onAction="#handlePublish" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" text="Pubblica Annuncio" maxWidth="Infinity"/>
                <Button fx:id="backButton" style="-fx-background-color: transparent; -fx-text-fill: #7f8c8d;" text="Annulla" maxWidth="Infinity"/>
            </children>
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </VBox>
    </children>
</VBox>